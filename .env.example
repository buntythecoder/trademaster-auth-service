# TradeMaster Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_USER=trademaster
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=jdbc:postgresql://localhost:5432/trademaster

# Redis Configuration  
REDIS_PASSWORD=your_redis_password_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# MinIO S3 Storage Configuration
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# JWT Configuration (MUST be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-for-production-change-this-to-256-bit-key-at-least-32-characters-long

# Broker Authentication Keys (MUST be exactly 32 bytes)
BROKER_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Zerodha Configuration
ZERODHA_APP_ID=your_zerodha_app_id
ZERODHA_API_SECRET=your_zerodha_api_secret

# Upstox Configuration
UPSTOX_CLIENT_ID=your_upstox_client_id
UPSTOX_CLIENT_SECRET=your_upstox_client_secret
UPSTOX_REDIRECT_URI=http://localhost:8087/api/v1/auth/upstox/callback

# Angel One Configuration
ANGEL_CLIENT_CODE=your_angel_client_code
ANGEL_PASSWORD=your_angel_password
ANGEL_API_KEY=your_angel_api_key
ANGEL_TOTP_SECRET=your_angel_totp_secret

# ICICI Direct Configuration
ICICI_SESSION_ID=your_icici_session_id
ICICI_SESSION_TOKEN=your_icici_session_token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Push Notification Configuration (Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_merchant_salt

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Monitoring & Logging
LOGGING_LEVEL_TRADEMASTER=INFO

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Docker Profile (development, production)
COMPOSE_PROFILES=development